#include <bits/stdc++.h>
#define ll long long
using namespace std;
void Solve()
{
    map<ll,vector<ll>> s;
    ll n,k;
    cin >> n >> k;
    ll a[n+1];
    for (int i = 1; i <= n; i++) cin >> a[i];
    sort(a+1,a+n+1);
    for (int i = 1; i <= n; i++) s[a[i]%k].push_back(a[i]);
    int temp = 0;
    for (auto v : s) temp += v.second.size()/2;
    if (temp < n/2)
    {
        cout << -1 << "\n";
        return;
    }
    ll ans = 0;
    for (auto v : s)
    {
        n = v.second.size();
        if (n%2 == 1&& n > 1)
        {
            ll sum_ji[n+1];
            ll sum_ou[n+1];
            sum_ji[0] = sum_ou[0] = 0;
            int turn = 0;
            for (int i = 1; i < n; i++)
            {
                turn ^= 1;
                if (turn)
                {
                    sum_ji[i] = sum_ji[i-1] + v.second[i] - v.second[i-1];
                    sum_ou[i] = sum_ou[i-1];
                }
                else
                {
                    sum_ji[i] = sum_ji[i-1];
                    sum_ou[i] = sum_ou[i-1] + v.second[i] - v.second[i-1];
                }
            }
            sum_ou[n] = sum_ou[n-1];
            sum_ji[n] = sum_ji[n-1];
            ll de = 1e18;
            for (int i = 0; i < n; i += 2) de = min(de,sum_ji[i] + sum_ou[n] - sum_ou[i]);
            ans += de/k;
        }
        else if (n%2 == 0)
        {
            for (int i = 0; i < n; i += 2) ans += (v.second[i+1] - v.second[i])/k;
        }
    }
    cout << ans << "\n";
}
int main()
{
    ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int t = 1;
    cin >> t;
    while (t--)
    {
        Solve();
    }
    return 0;
}
